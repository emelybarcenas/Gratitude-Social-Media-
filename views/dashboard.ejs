<!DOCTYPE html>
<html lang="en">
    <%- include('includes/head')%>
<body>

<%- include('includes/header')%>
<main>
<h1>Welcome to your dashboard</h1>
<h2>Your Entries: </h2>

    <% posts.forEach(post => { %>
        <a href="/post/<%= post.id %>" class="post-link">
        <button style="display: flex; flex-direction: column; width: 100%; height: auto; background-color: #f5f7ff; color: black" class="post-button" >
            <strong style="margin: 5px;">Title: <%= post.title %></strong>
            <p style="margin: 5px;"><%= new Date(post.createdDate).getMonth() + 1 %>/<%= new Date(post.createdDate).getDate() %>/<%= new Date(post.createdDate).getFullYear() %></p>
            <p style="margin: 5px;"><%= post.body %></p>
        </button>
    <% }) %>

</main>
 
<%- include('includes/footer')%>
</body>
</html>